{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}

<div class="container__card">
    {% for p in prod %}
        <div class="card">
            <a href="{{path('product_detail', {'id':p.id})}}">
                {% if p.photo is not null %}
                <div class="card__img">
                    <img src="{{ asset('/uploads/'~ p.photo) }}"/>
                </div>
                {% endif %}
                <div class="card__info">
                    <p>{{p.name}}</p>
                    <div class="card__info--price">
                        <p>prix : </p>
                        <p>{{p.price}} â‚¬</p>
                    </div>
                    {% if app.user %}
                        <button onclick='addInCart({{p.id}})'>
                            Ajouter au panier
                        </button>
                    {% endif %}
                </div>
                </a>
        </div>
    {% endfor %}
</div>

{% endblock %}


{% block javascripts %}

<script>
    async function addInCart(id){
        $.ajax({
            method: "POST",
            url: "/cart/" + id,
            async: true,
        })
            .then(response => {
                console.log(response);
            })
            .catch(error =>{
                console.log(error);
            })
    }
</script>

{% endblock %}