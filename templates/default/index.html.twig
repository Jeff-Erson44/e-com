{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}

<div class="container__card">
    {% for p in prod %}
        <div class="card">
            <a href="{{path('product_detail', {'id':p.id})}}">
                {% if p.photo is not null %}
                <div class="card__img">
                    <img src="{{ asset('/uploads/'~ p.photo) }}"/>
                </div>
                {% endif %}
                </a>    
                <div class="card__info">
                    <p>{{p.name}}</p>
                    <div class="card__info--price">
                    <p>{{ p.price|number_format(2, '.', ',') }} â‚¬</p>
                    </div>
                    {% if app.user %}              
                    <button class='button__primary' onclick='addInCart({{p.id}})'><i class="fas fa-cart-shopping"></i></i>       
                    </button>
                    {% endif %}
                </div>
        </div>
    {% endfor %}
</div>

{% endblock %}


{% block javascripts %}

<script>
    async function addInCart(id){
        $.ajax({
            method: "POST",
            url: "/cart/" + id,
            async: true,
        })
            .then(response => {
                console.log(response);
            })
            .catch(error =>{
                console.log(error);
            })
    }
</script>

{% endblock %}